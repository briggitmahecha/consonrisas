<%= form_for([@event, @event.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :comment %><br />
    <%= f.text_area :comment %>
    <% if current_member %>
      <input type="hidden" name="comment[member_id]" value="<%= current_member.id %>"/>    
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
