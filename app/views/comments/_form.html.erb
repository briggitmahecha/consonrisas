<%= form_for([@event, @event.comments.build]) do |f| %>
  <input type="hidden" id="has_twitter" value="<%= current_member_has_twitter %>" />
  <div class="field">
    <%= f.text_area :comment, :class=>"new_comment" %>
    <% if member_signed_in? %>
      <input type="hidden" name="comment[member_id]" value="<%= current_member.id %>"/>    
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit I18n.t('events.create_comment')  %>
  </div>
<% end %>
