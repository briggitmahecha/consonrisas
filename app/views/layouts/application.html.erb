<!DOCTYPE html>
<html>
<head>
  <title>..::Entretenimiento Para Todos::..  ::Beta::</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="menu" class="home_menu">
  <a href="/"><%=I18n.t('application.menu_home')%></a>
  <a href="/facilitators"><%=I18n.t('application.menu_facilitators')%></a>  
  <a href="/providers"><%=I18n.t('application.menu_providers')%></a>  
  <a href="/fundations"><%=I18n.t('application.menu_fundations')%></a>  
  <a href="/events"><%=I18n.t('application.menu_events')%></a>    
</div>
<div id="members_nav">
  <% if member_signed_in?  %>
    Ingresaste como <%= current_member.email %>. 
    <%= link_to I18n.t('account.logout'), destroy_member_session_path %> |
    <%= link_to I18n.t('account.edit'), edit_member_registration_path %>
  <% else %>
    <%= link_to I18n.t('account.register'), new_member_registration_path %> o 
    <%= link_to I18n.t('account.login'), new_member_session_path %>
  <% end %>
</div>
<div id="locale_menu">
  <form action="" method="get">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <%= I18n.t('set_locale') %>:
    <select name="locale">
      <option value="en">English</option>
      <% if I18n.locale == :es%>
        <option value="es" selected>Español</option>
      <% else %>
        <option value="es">Español</option>
      <% end %>
    </select>
    <input type="submit" value="Set" name="new_locale"/>
  </form>
</div>
<div id="application_messages">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
</div>

<%= yield %>

</body>
</html>
