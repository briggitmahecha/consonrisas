<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= f.label :email %><br />
  <%= f.text_field :email %><br />

  <%= f.label I18n.t('account.password') %><br />
  <%= f.password_field :password %><br />

  <% if devise_mapping.rememberable? -%>
    <%= f.check_box :remember_me %> <%= f.label I18n.t('account.remember_me') %>
  <% end -%>

  <p><%= f.submit I18n.t('account.login') %></p>  
  <button class="show_register_form login-link">
    No estoy registrado  
  </button>
<% end %>
