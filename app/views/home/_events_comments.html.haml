#events_comments
  - @comments.each_with_index do |c, i|
    .a_comment
      = link_to image_tag(member_thumb(c.member.facilitator), :class=>"comment_pic"), event_path(c.event_id), :class=>"nostyle" ,:title=>I18n.t('events.show')
      %p
        = c.comment[0, 80] << " ... "
        , comentario de
        = comment_name(c)
        , del evento 
        = link_to c.event.name, event_url(c.event) ,:title=>I18n.t('events.show')
        - unless member_signed_in?
          %input.register_wizzard{:type=>"button", :href=>"#", :value=>"¡Tú puedes ayudar!", :title=> "Cónectate para sacrle sonrisas al país"}             

