<div class="contact_information bordered_box" id="contact-info-<%=contact_information.id%>" >
<p>
  <b><%= I18n.t('name') %>:</b>
  <%= contact_information.name %>
<br/>
  <b>Email:</b>
  <%=contact_information.email %>
<br/>
  <b><%= I18n.t('contact_information.cellphone') %>:</b>
  <%= contact_information.cellphone %>
<br/>
  <b><%= I18n.t('contact_information.phone') %>:</b>
  <%= contact_information.phone %>
<br/>
  <b><%= I18n.t('contact_information.position') %>:</b>
  <%= contact_information.position %>
</p>
<% if member_signed_in? and (can_current_member_edit_fundation  @member.id or can_current_member_edit_provider @member.id ) %>
<p>
  <%= link_to I18n.t('destroy'), destroy_contact_information(@member, contact_information.id, @member_type),
    :confirm => I18n.t('messages.delete_confirmation'),
     :method => :delete, :class=>"contact_information_delete",
     :member_id=>@member.id,
     :info_id=> contact_information.id,
     :member_type=> @member_type
      %>
</p>
<% end %>
</div>
