<%= javascript_include_tag "ui.cities" %>
<%= form_for(@provider, :html => {:multipart=> true}) do |f| %>
  <% if @provider.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@provider.errors.count, "error") %> prohibited this provider from being saved:</h2>

      <ul>
      <% @provider.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label I18n.t('name') %><br />
    <%= f.text_field :name %>
    <input type="hidden" name="member_id" value="<%= current_member.id %>"/>
  </div>
  
  <div class="field">
    <%= f.label I18n.t('description') %><br />
    <%= f.text_area :description %>
  </div>  
  
  <div class="field">
    <%= f.label I18n.t("city") %><br />
    <%= f.text_field :city, :class=>"cities" %>
  </div>
  
  <div class="field">
    <%= f.label I18n.t("picture") %><br />
    <%= f.file_field :pic %>
  </div>  
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
