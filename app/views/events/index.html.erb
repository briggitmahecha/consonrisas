<h1><%= I18n.t('events.list') %></h1>

<table>
    <th></th>
    <th><%= I18n.t('date_name')%></th>
    <th><%= I18n.t('name') %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% num = 0 %>
<% @events.each do |event| %>
  <% if num % 2 == 0 %>
  <tr>
  <% else %>
  <tr class="alt">
  <% end %>
    <td> <%= image_tag event.pic.url(:thumb) %> </td>
    <td><%= event.date %></td>
    <td><%= event.name %></td>
    <td><%= link_to I18n.t('events.show'), event %></td>
    <td><%= link_to I18n.t('edit'), edit_event_path(event) %></td>
    <td><%= link_to I18n.t('destroy'), event, :confirm => I18n.t('messages.delete_confirmation'), :method => :delete %></td>
  </tr>
<% 
  num = num + 1
  end 
%>
</table>

<br />

<%= link_to I18n.t('events.new'), new_event_path %>
