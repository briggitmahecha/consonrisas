.bordered_box
  %b
    = I18n.t("events.attending_fundations")
    \: #{@event.fundations.count}
  - if @event.fundations.count > 0
    .going-div
      - @event.fundations.each do |fundation|
        .fundation-going{:id=>"fundation-going-#{fundation.id}", :style=>"display:inline"}      
          = link_to image_tag(fundation.pic.url(:thumb), :class=>"going_pic img-fundations"),  fundation_path(fundation), :title=>"#{fundation.name}"
          - if member_signed_in?          
            - unless current_member.fundations.select{|f| f.id == fundation.id}.empty?
              %a{:href=>"#", :class=>"remove_fundation", :event_id=>"#{@event.id}", :fundation_id=>"#{fundation.id}"}x
  - if member_signed_in? and (!@event.isClosed or can_current_member_edit_event(@event.id) )
    #new_fundation
      %form{:action => "/events/add_fundation", :method => "post"}
        %input{:name => "authenticity_token", :type => "hidden", :value => form_authenticity_token}
          = select_tag "fundation_id", options_from_collection_for_select(current_member.fundations, "id", "name")
          %input{:name => "event_id", :type => "hidden", :value => @event.id}/
          %input{:name => "new_fundation", :type => "submit", :value => I18n.t('events.add_me_fundation')}/
