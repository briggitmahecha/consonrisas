<p>
  <b>Shows to be shown: <%= @event.shows.count %></b>
</p>
<div id="new_show">
  <form action="/events/add_show" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <b>Add this show</b>
    <p>
      Show:
      <input name="show_id" type="input"/>
    </p>
    <p>
      Event:
      <input name="event_id" type="input"/>
    </p>    
    <input type="submit" value="Add Show" name="new_show"/>
  </form>
</div>

<h2>Comments:</h2>
<%= render :partial => "comments/comment", :collection=> @event.comments %>
<h2>Add a Comment:</h2>
<%= render :partial => "comments/form" %>

<%= link_to 'Edit', edit_event_path(@event) %> |
