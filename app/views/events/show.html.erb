<p>
  <b>Date:</b>
  <%= @event.date %>
</p>

<p>
  <b>Name:</b>
  <%= @event.name %>
</p>
<p>
  <b>Facilitators attending: <%= @event.facilitators.count %></b>
</p>
<% if member_signed_in? and is_current_member_facilitator? and current_member.has_facilitator_info? %>
<div id="new_facilitator">
  <form action="/events/add_facilitator" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input name="facilitator_id" type="hidden" value="<%= current_member.facilitador.id %>"/>
    <input name="event_id" type="hidden" value="<%= @event.id %>"/>
    <input type="submit" value="<%= I18n.t('events.add_me_facilitator') %>" name="new_facilitator"/>
  </form>
</div>
<% else %>
<div id="ask_facilitator">
  <form action="/events/add_facilitator" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <%= select_tag "facilitator_id", options_from_collection_for_select(Facilitator.all, "id", "id") %>    
    <input name="event_id" type="hidden" value="<%= @event.id %>"/>
    <input type="submit" value="<%= I18n.t('events.add_facilitator') %>" name="ask_facilitator"/>
  </form>
</div>
<% end %>
